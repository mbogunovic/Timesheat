@model NavigationViewModel

@{
	Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<body class="background-image has-cover">
	<div class="layout__wrapper">
		<header class="header">
			<div class="wrap">
				<div class="header__container">
					<ul class="user-panel">
						<li class="user-panel__item">
							<a href="javascript:;" class="user-panel__link" data-has-dropdown>@(HttpContext.Current.User.GetFullName())</a>
							<div class="user-panel__submenu" data-dropdown>
								<ul>
									<li>
										<a href="@Url.Action("ResetMyPassword", "Authorization")">Resetuj šifru</a>
									</li>
								</ul>
							</div>
						</li>
						<li class="user-panel__item">
							<a href="@Url.Action("Logout", "Authorization")" class="user-panel__link">Odjavi se</a>
						</li>
					</ul>
					<a href="/" class="header__home">
						<img src="~/assets/images/logo.png" alt="" class="header__logo" />
					</a>

					@if (Model?.Navigation.Items != null && Model.Navigation.Items.Any())
					{
						<nav class="nav">
							<div class="nav__mobile font-ico-burger" data-mobile-nav></div>
							<ul class="nav__list" role="menubar" data-nav>
								@foreach (var item in Model.Navigation.Items)
								{
									<li class="nav__item @(item.IsActive ? "active" : String.Empty)" role="menuitem">
										<a href="@item.Url" class="nav__link">@item.Page.PageTitle</a>
									</li>
								}
							</ul>
						</nav>
					}
				</div>
			</div>
		</header>
		<!-- .header -->
		<div class="wrap">
			<section class="content">
				<div class="content__heading">
					<h2><ico class="font-ico-@Model.PageIcon"></ico>@Model.PageTitle</h2>
				</div>
				@RenderBody()
			</section>
		</div>
	</div>
	<footer class="footer">
		<div class="wrap">
			<span>Maksim Bogunović & Nemanja Cindrić @DateTime.Now.Year. Sva prava zadržana</span><a href="@Url.Action("Index", "ReportAProblem")" class="footer__bug float-right"><ico class="font-ico-bug"></ico></a>
		</div>
	</footer><!-- .footer -->
	@RenderSection("additionalFooter", false)
</body>

